<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:gravity="center"
    tools:context=".activity.ResultActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/nurse_woman_3"
        android:translationY="@dimen/size_40"
        android:contentDescription="@string/nurse" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="2dp">
        <LinearLayout
            android:id="@+id/hasil"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nilai"
                android:textColor="#000"
                android:layout_gravity="center"
                android:textSize="20sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/tv_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="100"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="46sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="@string/_100"
                    android:textColor="#000"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="@string/statistik"
                android:layout_gravity="start"
                android:layout_marginTop="16dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="16sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="start">

                <TextView
                    android:id="@+id/tv_correct_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Jawaban benar"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_wrong_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Jawaban salah"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_answered"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Soal terjawab"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Total waktu"
                    android:visibility="gone"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_average_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Rata-rata waktu per soal"
                    android:visibility="gone"
                    android:textColor="#000"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_explanation"
                    style="@style/ButtonPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_40"
                    android:layout_margin="10dp"
                    android:background="@drawable/round_button_primary_radius_5dp"
                    android:text="@string/pembahasan" />

                <Button
                    android:id="@+id/btn_home"
                    style="@style/ButtonPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_40"
                    android:layout_margin="10dp"
                    android:background="@drawable/round_button_gray"
                    android:textColor="@color/colorDarkGray"
                    android:text="@string/halaman_utama" />

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>





</LinearLayout>